<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:padding="10dp">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="3"
                android:src="@drawable/history1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:paddingRight="5dp"
                        android:src="@drawable/ic_query_builder_24dp" />

                    <TextView
                        android:id="@+id/txtDateTime1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="9:30 ngày 23/02/2018"
                        android:textColor="#000"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:paddingRight="5dp"
                        android:src="@drawable/ic_location_on_24dp" />

                    <TextView
                        android:id="@+id/txtAddress1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1 Võ Văn Ngân, Thủ Đức,..."
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:paddingRight="5dp"
                        android:src="@drawable/ic_attach_money" />

                    <TextView
                        android:id="@+id/txtTotal1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="127,000đ"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:paddingRight="5dp"
                        android:src="@drawable/ic_info_outline_24dp" />

                    <TextView
                        android:id="@+id/txtStatus1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Đang vận chuyển"
                        android:textColor="#00C853"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


</android.support.v7.widget.CardView>
